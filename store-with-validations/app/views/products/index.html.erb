<h1>Products</h1>

<p>
  Download:
  <%= link_to "CSV", products_path(format: "csv") %> |
  <%= link_to "Excel", products_path(format: "xls") %>
</p>

<table id="products">
  <tr>
	<th><%=sortable "id","PromoId"%></th>
    <th><%=sortable "name","Product Name" %></th>
    <th><%=sortable "released_on","Release Date"%></th>
    <th><%=sortable "price", "ClientId"%></th>
  </tr>
<% @products.each do |product| %>
  <tr>
	<td><%= product.id %></td>
    <td><%= product.name %></td>
    <td><%= product.released_on.strftime("%B %e, %Y") %></td>
    <td><%= product.price %></td>
  </tr>
<% end %>
</table>

<p><%= link_to "Import products", new_product_import_path %></p>
